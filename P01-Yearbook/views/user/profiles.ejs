<h1>Profile List</h1> 

<form id="search" action="/user/profiles/search" method="POST">
   <div>
      <label for="searchString">Search:</label>
      <input id="searchString" name="searchString" type="text" placeholder="Search by first name, last name, email or interests" value="<%= searchString ? searchString : '' %>" style="width:500px;">

      <label for="sortBy">Sort by last name:</label>
      <select id="sortBy" name="sortBy" form="search">
         <option value="ascending" <% if (sortBy == "ascending") {%> selected <% } %> >Ascending</option>
         <option value="descending" <% if (sortBy == "descending") {%> selected <% } %>>Descending</option>
      </select>

      <button class = "btn btn-info" type="submit" value="Submit">Search</button>
      <% if (sortBy) { %><a href="/user/profiles">Show all profiles</a> <% } %>
  </div>
</form>

<ul>
   <% for (let i = 0; i < profiles.length; i++ ) {%>
      <div class="card" style="width: 15rem;">
         <li class="list-group-item">
            <img src="<%= profiles[i].imagePath %>" class="img-thumbnail mh-100">
            <a style = "text-decoration: none; font-size: larger;" class="card-title" href="/user/profile/<%= profiles[i].id %>"><%= profiles[i].firstName + " " + profiles[i].lastName%></a>
         </li>
      </div>
  <% } %>
</ul>
